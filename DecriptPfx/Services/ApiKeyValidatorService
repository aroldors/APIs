namespace DecriptPfx.Services
{
    public interface IApiKeyValidatorService
    {
        bool IsValidApiKey(string apiKey);
    }

    public class ApiKeyValidatorService : IApiKeyValidatorService
    {
        private IConfiguration configuration;
        private readonly string _validApiKey = configuration.GetValue<string>("ApiKey") ?? throw new ArgumentNullException(nameof(_validApiKey), "API Key cannot be null"); // Pode vir de configurações

        public bool IsValidApiKey(string apiKey)
        {
            return apiKey == _validApiKey;
        }        
    }
}